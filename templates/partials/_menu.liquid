{% if theme.menu_title %}
    <div class="flex-ns w-50-ns dn">
        <h2 class="ma0 pl4 page-title">
            {% if page.is_homepage != true %}
                {{ page.name }}
            {% endif %}
        </h2>
    </div>
{% endif %}
<div class="pr4 left-auto mobile-menu-toggle flex items-center">
    {% if theme.menu_text != "" %}
        <button class="link bg-none bn pa0 input-reset button-reset">
            {{ theme.menu_text }}
        </button>
    {% endif %}
    {% if theme.menu_text_button %}
        <div class="hamburger ml3">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>
    {% endif %}
</div>