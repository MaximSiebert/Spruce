html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  background-color: {{ theme.background_color }};
  {% css_block theme.text_typography %}
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/*
------------------------------------------------------------------
SCSS Variables
------------------------------------------------------------------
*/

$mobile-width: 767px;

$menu-max-width: 200px;

/*
------------------------------------------------------------------
General Styles
------------------------------------------------------------------
*/

h1, h2, h3, h4, h5, h6 {
  text-rendering: optimizeLegibility;
}

h2 {
  {% css_block theme.headline_typography %}
}

a {
  outline: none;
  color: inherit;
  text-decoration: inherit;
}

body.gallery .caption a,
body.gallery .title-element a,
body.listing .title-element a,
body.simple main a,
body.content main a {
  {% css_block theme.link_typography %}
  &:hover {
    {% css_block theme.link_typography.hover %}
  }
}

img {
  max-width: 100%;
  display: block; 
  height: auto;
}

.container {
  margin-left: $menu-max-width;
  max-width: 960px;
  padding: 27px 9px 25px 27px;

  @media only screen and (max-width: $mobile-width) {
    margin: 54px 0 0;
    padding: 20px;
  }
}

.content_page {
  .container {
    @media only screen and (max-width: $mobile-width) {
      padding: 0;
    }
  }
}

/*
------------------------------------------------------------------
Header / Menu Styles
------------------------------------------------------------------
*/

.header {
  padding: 27px 9px 25px 27px;
  position: fixed;
  top: 0;
  left: 0;
  width: $menu-max-width;

  @media only screen and (max-width: $mobile-width) {
    width: 100%;
    background: {{ theme.background_color }};
    padding: 15px 20px;
    z-index: 10;
    max-height: 100vh;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }

  .logo {
    {% css_block theme.logo_typography %}
    margin: 0;
    a:hover {
      {% css_block theme.logo_typography.hover %}
    }
    img {
      max-width: 250px;
      max-height: 100px;
    }
  }

  &.active {

    .header-items-container {
      display: block;
      overflow: visible;
      height: 100vh;
      .menu {
        display: block;
      }
    }

    .mobile-menu-toggle {
      border: none;
      &:after {
        transform: rotate(45deg);
      }
      &:before {
        transform: rotate(135deg);
      }
    }
  }
}

.menu {
  ul {
    list-style: none;
    padding-left: 0;
  }
  li {
    & > a {
      {% css_block theme.menu_typography %}
      text-decoration: none;
    }
    &.item > a {
      &:hover {
        {% css_block theme.menu_typography.hover %}
      }
    }
    &.item {
      &.selected a {
        {% css_block theme.menu_typography.selected %}
      }
    }
    &.category > a {
      {% css_block theme.menu_category_typography %}
      &.selected > a {
        {% css_block theme.menu_category_typography.selected %}
      }
    }
  }

  .category {
    margin: 1em auto;
  }
}

.header-items-container {
  @media only screen and (max-width: $mobile-width) {
    height: 0;
    overflow: hidden;
    line-height: 33px;
    transition: height 180ms ease-in-out;
  }
}

.mobile-menu-toggle {
  display: none;
  border: 1px solid {{ theme.menu_typography.color }};
  border-width: 2px 0;
  background: transparent;
  position: absolute;
  top: 15px;
  right: 20px;
  width: 24px;
  height: 20px;
  text-indent: 100%;
  padding: 0;
  white-space: nowrap;
  overflow: hidden;

  @media only screen and (max-width: $mobile-width) {
    display: block;
  }

  &:after, &:before {
    content: '';
    width: 100%;
    height: 2px;
    position: absolute;
    top: calc(50% - 1px);
    left: 0;
    background: {{ theme.menu_typography.color }};
  }

  &.active {
    border: none;
    &:after {
      transform: rotate(45deg);
    }
    &:before {
      transform: rotate(135deg);
    }
  }
}

/*
------------------------------------------------------------------
Footer Styles
------------------------------------------------------------------
*/

.footer {
  padding: 20px 27px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: $menu-max-width;
  {% css_block theme.footer_typography %}

  @media only screen and (max-width: $mobile-width) {
    padding: 20px;
    width: 100%;
    position: static;
  }
}


/*
------------------------------------------------------------------
Gallery Styles
------------------------------------------------------------------
*/

body.gallery {
  .asset {
    margin: 2em 0;
    &.image {
      position: relative;
      img {
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        opacity: 0;
        transition: opacity 300ms ease-in-out;
        {% if theme.gallery_fit_images %}
          max-height: 90vh;
          width: auto;
        {% endif %}
      }
      .lazyloaded {
        opacity: 1;
      }
    }
    &.video { }
    &.text {
      max-width: 600px;
    }
  }
  .caption {
    {% css_block theme.gallery_caption_typography %}
  }
}

.image-placeholder {
  max-width: 100%;
  height: auto;
  transition: opacity 500ms ease-in-out;
  {% if theme.gallery_fit_images %}
    max-height: 90vh;
    width: auto;
  {% endif %}
}

.lazyloaded + .image-placeholder {
  opacity: 0;
}

.title-element {
  max-width: 600px;
  margin-bottom: 2em;
}

/*
------------------------------------------------------------------
Listing Styles
------------------------------------------------------------------
*/

body.listing {
  .asset {

    .title {
      display: flex;
      align-items: flex-end;
      padding: 1em 0;
      {% css_block theme.listing_caption_typography %}
    }
    &:hover {
      .title {
        {% css_block theme.listing_caption_typography.hover %}
      }
    }
  }

  .asset {
    flex-basis: calc(50% - .5em);
    max-width: 300px;
    margin-right: .5em;
    margin-bottom: .5em;

    @media only screen and (max-width: $mobile-width) {
      flex-basis: calc(50% - .25em);
    }

    &:nth-child(odd) {
      @media only screen and (max-width: $mobile-width) {
        margin-right: .25em;
        margin-left: 0;
      }
    }

    &:nth-child(even) {
      @media only screen and (max-width: $mobile-width) {
        margin-right: 0;
        margin-left: .25em;
      }
    }
  }

  .asset-container {
    display: flex;
    flex-wrap: wrap;
  }
}

